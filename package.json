{
  "name": "training-tracker",
  "type": "module",
  "private": true,
  "engines": {
    "node": ">=24.9"
  },
  
  "scripts": {
    "build": "dotenv -e prod.env -- nuxt build",
    "dev": "dotenv -e local.env -- nuxt dev",
    "generate": "nuxt generate",
    "preview": "dotenv -e prod.env -- nuxt preview",
    "postinstall": "nuxt prepare",
    "type-check": "vue-tsc --noEmit",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "lint:eslint": "eslint --max-warnings=0 .",
    "lint:eslint:fix": "eslint --fix .",
    "lint:prettier": "prettier -c \"**/*.{js,ts,vue,json,md,css,scss}\"",
    "lint:prettier:fix": "prettier -w \"**/*.{js,ts,vue,json,md,css,scss}\"",
    "check": "npm run type-check && npm run lint",
    "format": "npm run lint:prettier:fix",
    "fix": "npm run lint:eslint:fix && npm run lint:prettier:fix"
  },
   "dependencies": {
    "@nuxt/ui": "4.1.0",
    "dotenv": "^17.2.3",
    "nuxt": "^4.2.1",
    "vue": "^3.5.24",
    "vue-router": "^4.6.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@nuxt/eslint": "^1.10.0",
    "@tailwindcss/postcss": "^4.1.17",
    "@types/markdown-it": "^14.1.2",
    "@nuxtjs/dotenv": "^1.4.2",
    "dotenv-cli": "^6.0.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-vue": "^10.5.1",
    "globals": "^16.5.0",
    "markdown-it": "^14.1.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "sass-embedded": "^1.93.3",
    "tailwindcss": "^4.1.17",
    "typescript-eslint": "^8.46.4",
    "vue-eslint-parser": "^10.2.0",
    "vue-tsc": "^3.1.3"
  },
  "lint-staged": {
    "*.{js,ts,vue}": [
      "eslint --fix"
    ],
    "*.{js,ts,vue,json,md,css,scss}": [
      "prettier -w"
    ]
  },
  "overrides": { "commander": "^13.1.0" }
}
